@using BMCR_projeckt.ViewModels
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BMCR_projeckt.FormModels.RoomFormModel

<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <title>Create Room</title>
</head>
<body class="bg-dark text-white">
<div>
    <div class="container">
        <h1 class="m-2">Create Builing</h1>
        <form method="post" asp-controller="CreateRoom" asp-action="CreateRoom">
            <div class="form-group">
                <label for="Name">Name:</label>
                <input type="text" asp-for="Name" name="Name" class="form-control w-25"/>
                <label for="BuildingID">BuildingID:</label>
                <input type="text" asp-for="BuildingID" name="BuildingID" class="form-control w-25"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Room" class="btn btn-primary mt-2"/>
            </div>
        </form>
    </div>
</div>
<div class="d-flex justify-content-center">
    <a href="/Create/Index" class="btn btn-secondary">View buildings</a>
</div>

</body>
</html>