@model BMCR_projeckt.ViewModels.TimeViewModel

<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
    <title>Edit</title>
</head>
<body class="bg-dark text-white">
<h1 class="m-2">Edit</h1>
<div class="d-flex justify-content-center align-items-center h-100 border-1">
    <form method="post" asp-controller="Time" asp-action="EditTime">
        <div class="form-group">
             <label for="Description">Description:</label>
                            <input type="text" asp-for="Description" name="Description" class="form-control w-100"/>
                            <label for="RoomID">RoomID:</label>
                            <input type="text" asp-for="RoomID" name="RoomID" class="form-control w-100"/>
                            <label for="From">From:</label>
                            <input type="DateTime" asp-for="From" name="From" class="form-control w-100"/>
                            <label for="To">To:</label>
                            <input type="DateTime" asp-for="To" name="To" class="form-control w-100"/>
        </div>
        <div class="form-group">
            <input type="submit" value="Edit Time" class="btn btn-primary mt-2 mb-5"/>
        </div>
    </form>
</div>
<div class="d-flex justify-content-center">
    <a href="/Create/Index" class="btn btn-secondary">View buildings</a>
</div>

</body>
</html>