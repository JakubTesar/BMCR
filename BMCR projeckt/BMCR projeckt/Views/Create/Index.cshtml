@using BMCR_projeckt.ViewModels
@model System.Collections.Generic.List<BMCR_projeckt.ViewModels.BuildingViewModel>
@{
    List<BuildingViewModel> buildings = new List<BuildingViewModel>();
    buildings = Model;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge"> <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">

    <title>Index</title>
</head>
<body class="bg-dark text-white">
<h1 class="m-2">Welcome to BMCR</h1>
<div class="d-flex justify-content-center flex-wrap m-5">
    @if (buildings != null)
    {
        foreach (BuildingViewModel b in buildings)
        {
            <div class="card bg-dark border m-2" style="width: 25rem;">
                <div class="card-body">
                    <h5 class="card-title">@b.Name</h5>
                    <h:link styleClass="btn btn-info me-2" outcome="detail.xhtml" value="Read more">
                        <f:param name="id" value="#{postVar.id}"/>
                    </h:link>
                    <h:link styleClass="btn btn-warning mx-2" outcome="edit.xhtml" value="✏">
                        <f:param name="id" value="#{postVar.id}"/>
                    </h:link>
                    <h:form styleClass="d-inline">
                        <h:commandButton styleClass="btn btn-danger mx-2" value="💣"
                                         action="#{postService.deletePost(postVar.id)}"/>
                    </h:form>
                </div>
            </div>
        }
    }
</div>
<div class="d-flex justify-content-center">
    <a type="button" class="btn btn-primary " href="/Create/CreateBuilding">
        Create new
    </a>
</div>

</body>
</html>